<%= form_for @user, remote: true do |form| %>

  <div class="form-row">
    <div class="input-group input-group-lg col-md-3 mx-auto">
      <div class="mt-2">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="input-group input-group-lg col-md-3 mx-auto">
      <div class="mt-2">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="input-group input-group-lg col-md-3 mx-auto">
      <div class="mt-2">
        <%= form.label :url %>
        <%= form.text_field :url, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group text-center mt-4">
    <%= form.submit 'Search', class: 'btn btn-primary', data: {confirm_with: 'Searching...'} %>
  </div>

<% end %>

<div class="">
  <%= email = User.pluck(:email).compact.join(",").downcase %>
</div>